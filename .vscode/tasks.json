{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Debug",
            "type": "shell",
            "command": "go",
            "args": [
                "build", 
                "-gcflags=all=-N -l",
                "-o", "net-watcher-debug"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Build Release",
            "type": "shell", 
            "command": "go",
            "args": [
                "build",
                "-ldflags=-s -w",
                "-o", "net-watcher"
            ],
            "group": "build",
            "presentation": {
                "reveal": "always", 
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Test",
            "type": "shell",
            "command": "go",
            "args": [
                "test",
                "-v",
                "./..."
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Format Code",
            "type": "shell",
            "command": "go",
            "args": [
                "fmt",
                "./..."
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        },
        {
            "label": "Vet Code",
            "type": "shell",
            "command": "go",
            "args": [
                "vet",
                "./..."
            ],
            "group": "test",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": ["$go"]
        },
        {
            "label": "Clean Build",
            "type": "shell",
            "command": "rm",
            "args": [
                "-f",
                "net-watcher",
                "net-watcher-debug"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": []
        }
    ]
}